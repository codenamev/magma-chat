<%= link_to conversation_path(conversation), class: "hover:bg-gray-200 p-2 bg-gray-300 rounded block #{@conversation == conversation ? "active" : ""}" do %>
  <div class="w-full text-gray-700 truncate"><%= conversation.title.capitalize %></div>
  <div class="text-gray-500 text-sm"><%= distance_of_time_in_words_to_now(conversation.updated_at) + " ago" %></div>
<% end %>
