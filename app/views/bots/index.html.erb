<div class="p-3 sm:p-3">
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
    <%= render Bot.published.order(:name) %>
  </div>

  <% if current_admin? %>
    <h2 class="mt-8 mb-2 text-2xl text-gray-400">Unpublished Bots <span class="text-base text-gray-400">(Only admins can see these)</span></h2>
    <div class="grid grid-cols-2 opacity-70 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4">
      <%= render Bot.unpublished %>
    </div>
  <% end %>
</div>
